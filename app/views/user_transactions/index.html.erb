

<div class="columns is-centered">
  <div class="column is-6">
    <div class="card card-content">
      <div class="content">
        <p id="notice"><%= notice %></p>

        <h1 class="has-text-centered">User Transactions</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Icon</th>
              <th>Name</th>
              <th>Amount</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @user_transactions.each do |user_transaction| %>
              <tr>
                <td><%= icon(first_transaction_icon(user_transaction.id))%></td>
                <td><%= user_transaction.name %></td>
                <td>$<%= user_transaction.amount %></td>
                <td><%= link_to 'Show', user_transaction %></td>
                <td><%= link_to 'Edit', edit_user_transaction_path(user_transaction) %></td>
                <td><%= link_to 'Destroy', user_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= link_to 'New User Transaction', new_user_transaction_path, class:"button is-success mt-3" %>
  </div>
</div>
