
<div class="columns is-centered">
  <div class="columns is-6">
  <div class="card">
    <div class="card-header">
      <h2 class='has-text-centered'><strong>Log in</strong></h2>
    </div>
    <div class="card-content">
      <div class="content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :username, class:"label"%>
            <%= f.text_field :username, class:'input' %>
          </div>

          <div class="field">
            <%= f.password_field :password, value: user_login_password, type: :hidden %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class:"button is-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  </div>
</div>
