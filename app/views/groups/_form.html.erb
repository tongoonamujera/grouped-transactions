          <%= form.radio_button :icon, 'fas fa-briefcase-medical fa-2x' %> <i class="fas fa-briefcase-medical fa-2x"></i><br>
        </div>
      </div>

      <div class="columns">
        <div class="column is-4">
          <%= form.radio_button :icon, 'fas fa-money-bill-alt fa-2x' %> <i class="fas fa-money-bill-alt fa-2x"></i><br>
        </div>
        <div class="column is-4">
          <%= form.radio_button :icon, 'fab fa-500px fa-2x' %> <i class="fab fa-500px fa-2x"></i><br>
        </div>
        <div class="column is-4">
          <%= form.radio_button :icon, 'fab fa-bitcoin fa-2x' %> <i class="fab fa-bitcoin fa-2x"></i><br>
