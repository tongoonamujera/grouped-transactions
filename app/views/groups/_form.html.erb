          <%= form.radio_button :icon, 'fas fa-atlas fa-2x' %> <i class="fas fa-atlas fa-2x"></i><br>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-success" %>
  </div>
<% end %>
