      <div class="columns">
        <div class="column is-4">
          <%= form.radio_button :icon, 'fas fa-folder-open fa-2x' %> <i class="fas fa-folder-open fa-2x"></i><br>
        </div>
        <div class="column is-4">
          <%= form.radio_button :icon, 'fab fa-apple fa-2x' %> <i class="fab fa-apple fa-2x"></i><br>
        </div>
